		"type": "heading",
		"data": "Entity Documentation -  minecraft:equipment"
	},
	{
		"type": "other",
		"data": "`minecraft:equipment` sets the equipment table to use for the entity."
	},
	{ "type": "heading", "data": "Parameters" },
	{
		"type": "table",
		"data": [
			{
				"Name": "slot_drop_chance",
				"Default Value": "*not set*",
				"Type": "List",
				"Description": " A list of slots with the chance to drop an equipped item from that slot."
			},
			{
				"Name": "table",
				"Default Value": "*not set*",
				"Type": "String",
				"Description": " The file path to the equipment table, relative to the behavior pack's root."
			}
		]
	},
	{ "type": "heading", "data": "Example" },
	{
		"type": "code",
		"data": {
			"minecraft:equipment": {
				"table": "loot_tables/entities/piglin_brute_gear.json"
			}
		},
		"language": "json"
	},
	{ "type": "heading", "data": "Vanilla entities examples" },
